---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import { getBlogPost, getBlogPosts } from '../../lib/supabase';

export async function getStaticPaths() {
  try {
    const posts = await getBlogPosts();
    return posts.map(post => ({
      params: { slug: post.slug },
      props: { post },
    }));
  } catch (error) {
    // Fallback to empty array if database is not accessible during build
    console.error('Error fetching blog posts:', error);
    return [];
  }
}

const { post } = Astro.props;

// Fallback content if post is not found
if (!post) {
  return Astro.redirect('/404');
}

// Convert newlines to paragraphs
const formattedContent = post.content.split('\n\n').map(paragraph => 
  `<p>${paragraph.trim()}</p>`
).join('');
---

<Layout 
  title={post.title}
  description={post.excerpt}
>
  <Hero 
    title={post.title}
    subtitle={post.excerpt}
    backgroundImage={post.featured_image || "https://t3.ftcdn.net/jpg/05/59/74/36/240_F_559743693_dAUFbSqvfH03wwPI8YmWWB5d9wc4yDJy.jpg"}
    height="h-[40vh]"
  />
  
  <article class="py-16 bg-white">
    <div class="temple-container max-w-4xl">
      <div class="prose prose-lg mx-auto">
        <p class="text-gray-600 mb-8">
          Published on {new Date(post.published_at).toLocaleDateString()}
        </p>
        
        <div class="content" set:html={formattedContent} />
      </div>
    </div>
  </article>
</Layout>

<style>
.prose {
  max-width: 65ch;
  color: #374151;
}

.prose p {
  margin-bottom: 1.5em;
  line-height: 1.75;
}

.prose h2 {
  font-family: 'Playfair Display', serif;
  font-size: 1.875rem;
  font-weight: 700;
  color: #141E30;
  margin-top: 2em;
  margin-bottom: 1em;
}
</style>