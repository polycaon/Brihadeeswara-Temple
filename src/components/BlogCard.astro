---
interface Props {
  title: string;
  url: string;
}

const { title, url } = Astro.props;
---

<a href={url} class="block bg-white rounded-lg p-6 shadow-md hover:shadow-lg transition-all duration-300">
  <h3 class="font-heading text-xl font-bold text-temple-navy hover:text-temple-red transition-colors duration-200">
    {title}
  </h3>
</a>