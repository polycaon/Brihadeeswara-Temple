---
interface Props {
  title: string;
  subtitle?: string;
  backgroundImage: string;
  height?: string;
}

const { 
  title, 
  subtitle, 
  backgroundImage,
  height = "h-[30vh]"
} = Astro.props;
---

<section 
  class={`relative ${height} flex items-center justify-center bg-temple-navy bg-cover bg-center`}
  style={`background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url(${backgroundImage});`}
>
  <div class="text-center text-white z-10 px-4 max-w-4xl mx-auto" data-aos="fade-up">
    <h1 class="font-heading text-5xl md:text-6xl lg:text-7xl mb-4 drop-shadow-lg">{title}</h1>
    {subtitle && <p class="text-xl md:text-2xl max-w-3xl mx-auto opacity-90 drop-shadow-md">{subtitle}</p>}
  </div>
</section>